<div class="WelcomeBanner">
  <h2>Welcome Back !</h2>
</div>


<div class="MainContent">
  <h1 style="text-align: center" class="my-3">Client infos :</h1>

  <div  class="EditClientPanel">
    <div class="container px-0 mx-0">
      <div class="row px-0 mx-0">
        <div class="col">
          <h1>Edit client :</h1>
          <%= render "formEdit", client: @client %>
        </div>
        <div class="d-flex flex-col justify-content-end align-items-end">
          <%= button_to "Destroy this client", @client, method: :delete, class: "btn btn-light"%>
        </div>
    </div>
  </div>

  </div>
  <br>

  <div>
    <%= link_to "Back to clients", new_client_path %>
  </div>


  <br>
  <h2>Service history :</h2>

  <div id="prestations">
    <% @prestations.each do |prestation| %>
      <% if prestation.ClientName == @client.Name %>
        <%= render prestation %>
        <p>
          <%= link_to "Edit this prestation", edit_prestation_path(prestation) %>
        </p>
      <% end %>
    <% end %>
  </div>
  <br><br>

</div>

